<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/other_user_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:orientation="vertical">

            <!--            <TextView-->
            <!--                android:id="@+id/other_user_name"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/name_surname"-->
            <!--                android:textSize="11sp" />-->

            <TextView
                android:id="@+id/other_user_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_other_user_text_background"
                android:padding="10dp"
                android:text="@string/other_user_message"
                android:textColor="@color/chat_other_user_text" />

            <TextView
                android:id="@+id/other_user_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingHorizontal="10dp"
                android:text="@string/sample_date_time"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_user_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <!--            <TextView-->
            <!--                android:id="@+id/current_user_name"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/name_surname"-->
            <!--                android:textSize="11sp" />-->

            <TextView
                android:id="@+id/current_user_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_current_user_text_background"
                android:padding="10dp"
                android:text="@string/current_user_message"
                android:textColor="@color/chat_current_user_text" />

            <TextView
                android:id="@+id/current_user_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="3dp"
                android:paddingHorizontal="10dp"
                android:text="@string/sample_date_time"
                android:textSize="11sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>